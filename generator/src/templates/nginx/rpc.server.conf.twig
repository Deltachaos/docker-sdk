{% extends "nginx/application.server.conf.twig" %}
{% block host %}
  server_name {{ host }} {{ rpcServer }};
  listen 80;
{% endblock host %}
{% block location %}
{{ parent() }}

    fastcgi_param SPRYKER_SESSION_BE_NAMESPACE "{{ storeServices['session']['namespace'] | default(domainData['services']['session']['namespace']) }}";
    fastcgi_param SPRYKER_BE_HOST {{ host }};
    fastcgi_param SPRYKER_BE_PORT {{ port }};

{% if project['_yvesEndpointMap'][domainData['store']] is not empty %}
    fastcgi_param SPRYKER_FE_HOST {{ project['_yvesEndpointMap'][domainData['store']] }};
    fastcgi_param SPRYKER_FE_PORT {{ (project['_yvesEndpointMap'][domainData['store']] | split(':'))[1] | default(80) }};
{% endif %}

    root /data/public/Zed;
{% endblock location %}
